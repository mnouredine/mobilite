{% extends 'itineraire/itineraire-frame.html.twig' %}

{% block subcontent %}
	<section style="padding-top: 12px;">
		<div class="container">
			<div class="row">
				<div class="col-12 table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th scope="col">Code</th>
								<th scope="col">Nom</th>
								<th scope="col">Description</th>
								<th scope="col">Compagnie</th>
								<th scope="col">Statut</th>
								<th scope="col"></th>
							</tr>
						</thead>
						<tbody>
							{% for itineraire in itineraires %}
								<tr>
									<th scope="row">{{ itineraire.code }}</th>
									<td>{{ itineraire.nom }}</td>
									<td>{{ itineraire.description }}</td>
									<td>{{ itineraire.compagnie.nom }}</td>
									<td>{{ itineraire.statut }}</td>
									<td>
										<a class="btn btn-warning btn-sm" href="{{ path('itineraire_arret', {compagnie_id: itineraire.compagnie.id, itineraire_id: itineraire.id}) }}">
											<i class="fa fa-eye"></i>
										</a>
										<a class="btn btn-info btn-sm" href="{{ path('itineraire_modification', {id: itineraire.id}) }}">
											<i class="fa fa-edit"></i>
										</a>
										<a class="btn btn-danger btn-sm">
											<i class="fa fa-trash"></i>
										</a>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
